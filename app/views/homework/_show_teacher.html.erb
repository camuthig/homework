<% if @homework.assignments.exists? %>
  <table class="table">
    <tr>
      <th>Student</th>
      <th>Latest Answer</th>
      <th></th>
    </tr>
    <% @homework.assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.user.username %></td>
        <!-- TODO Make sure that the answer exists before putting it here -->
        <% if assignment.answers.exists? %>
          <td><%= assignment.answers.last.answer %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= link_to "See Answer History", assignment_url(assignment), class: "btn btn-primary"%></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <h4>Assign this homework to students for them to begin work.</h4>
<% end %>