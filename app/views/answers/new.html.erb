<%= content_tag :div, class: 'page-header' do %>
  <%= content_tag :h1 do %>
    <%= @assignment.homework.title %>
  <% end %>
<% end %>

<%= content_tag :div, class: 'container' do %>
  <%= content_tag :div, class: 'row' do %>
    <%= content_tag :h3 do %>
      <%= @assignment.homework.question %>
    <% end %>
  <% end %>
  <%= content_tag :div, class: 'row' do %>
    <%= content_tag :div, class: 'col-md-offset-1 col-md-6' do %>
      <%= bootstrap_form_for(@answer, :url => assignment_answers_path(@assignment), html: { class: 'form-horizontal' }) do |f| %>
          <%= f.text_area :answer, :value => (@latest_answer ? @latest_answer.answer : '') %>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

